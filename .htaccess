RewriteEngine on
RewriteBase /

##首页
RewriteRule ^(\/)?$ /index2.php
RewriteRule ^index(\/)?.html$ /index2.php
RewriteRule ^admin(\/)?$ /admin/index.php
##搜索
RewriteRule ^search/([0-9]+)/(.*)?$ /main.php?enname=search&arrvied=$1&id=$2
###详情页
RewriteRule ^([0-9a-zA-Z]+)+(\/)?([0-9]+)?$ /main.php?enname=$1&id=$3
##一级页面
RewriteRule ^([0-9a-zA-Z]+)+(\/)?([0-9a-zA-Z|\-]+)?(\/)?([0-9a-zA-Z]+)?(\/)?([0-9a-zA-Z]+)?(\/)?([0-9]+)?$ /main.php?enname=$1&match=$3&order=$5&orderby=$7&page=$9
##介绍页面
RewriteRule ^([0-9a-zA-Z]+)+(.html)+$ /main.php?enname=$1&id=$3&page=$4

ErrorDocument 401 /error.html
ErrorDocument 400 /error.html
ErrorDocument 403 /error.html
ErrorDocument 500 /error.html
ErrorDocument 404 /error.html
